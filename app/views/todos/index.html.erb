<h1>Your Todos</h1>
<h2></h2>
<div class="ui grid">
	<div class="six wide column">
		<i class="large inbox icon"></i>Inbox
		<div class="ui search">
		  <div class="ui icon input">
		    <%= form_for @todo, :remote => true, url:{controller: 'todos', action: 'search'} do |f| %>
		    <%= f.text_field :title, :name => "query", :id => 'query', :placeholder => "Quick Find", :class => 'prompt' %>
		    <i class="search icon"></i>
		    <%= f.submit "Search" , :id => "search" %>
		    <% end %>
		  </div>
		  <div class="results"></div>
		</div>
	</div>
	<div class="ten wide column">
		<div class="ui relaxed divided list" id="todo-list">
		<% if @todos %>
		<% @todos.each do |todo| %>
		<div class="item">
			<i class="circle outline icon"></i>
			<div class="content">
			  <span><p style="line-height: 1em;" id="<%= todo.id %>"><%= link_to todo_path(todo.id) do %> <%= todo.title %> <% end %>| <%= todo.due_date.strftime('%b %d %H:%M') %> | <button class="modal-show"><i class="comment outline icon modal" ></i></button> | <%= link_to 'Edit', edit_todo_path(todo.id) %> | <%= link_to 'Delete', todo_path(todo.id), :method => :delete %></p></span>
			  
			  <!-- <div class="description">Updated 10 mins ago</div> -->
			</div>
		</div>
		<% end %>
		<% end %>
		</div>
		<!-- I'll be making here AJAX later -->
		<i class="large plus icon"></i> <%= link_to 'Add Task', new_todo_path %> 
	</div>
</div>
<% if @todos %>
<% @todos.each do |todo| %>
<div class="ui modal" id="modal<%=todo.id%>">
  <i class="close icon"></i>
  <div class="header">
  	<h3 id="modal-title"></h3>
  	<p id="modal-due"></p>
  </div>
  <div class="content">
    <div class="description">
  </div>
  <div class="actions">
    <div class="ui left labeled icon button" id="add-gif">
      Add GIF
      <i class="search icon"></i>
    </div>
      <div class="ui search gif" id="hidden-gif-search" style="display: none;">
		  <div class="ui icon input">
		    <input class="prompt" type="text" placeholder="Type something crazy...">
		    <i class="search icon"></i>
		  </div>
		  <div class="results"></div>
	  </div>
  </div>
</div>
<% end %>
<% end %>

