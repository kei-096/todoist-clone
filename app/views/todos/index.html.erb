<h1>Hello</h1>

<div class="ui grid">
	<div class="six wide column">
		<i class="large inbox icon"></i>Inbox
	</div>
	<div class="ten wide column">
		<div class="ui relaxed divided list">
		<% if @todos %>
		<% @todos.each do |todo| %>
		  <div class="item">
		    <i class="circle outline icon"></i>
		    <div class="content">
		      <span><p style="line-height: 1em; */" id="todo<%= todo.id %>"><%= todo.title %> | <%= todo.due_date.strftime('%b %d %H:%M') %> | <%= link_to 'Edit', edit_todo_path(todo.id) %> | <%= link_to 'Delete', todo_path(todo.id), :method => :delete %></p></span>
		      <!-- <div class="description">Updated 10 mins ago</div> -->
		    </div>
		  </div>
		<% end %>
		<% end %>
		</div>
		<!-- I'll be making here AJAX later -->
		<i class="large plus icon"></i> <%= link_to 'Add Task', new_todo_path %> 
	</div>
</div>